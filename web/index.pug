doctype html
//- basic libraries: jquery(1.10.2), d3js(3.5.4), angularjs(1.3.15), bootstrap(3.0/4.0)/semantic-ui(0.9.3/0.9.5)
//-                  fontawesome(4.4.0), reactjs(0.14.0)
- var use = { cdn: false, og: false, favicon: true, appleicon: true }
- var lib = { jquery: true, d3js: false, angular: false, bootstrap: true, semantic: false, fontawesome: true, reactjs: false, revealjs: false, ionrangeslider: false, ldcolorpicker: false }
- var assets = "assets"
- var favicon = "thumbnail.png"
- var title = "template"
- var og = {}
- og.title = title
- og.twitter = {type: "summary_large_image", site: "@zbryikt", creator: "@zbryikt"}
- og.domain = "zbryikt.github.io"
- og.url = ""
- og.thumbnail = {width: 200, height: 200, type: "image/png"}
- og.thumbnail.url = "thumbnail.png"
- og.author = "zbryikt"
- og.section = "Taiwan"
- og.keyword = "zbryikt,template"
- og.description = ""
- var fb = {}
- fb.app_id = ""
- fb.admins = ""
html(lang="en")
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    // libraries
    //-include library.pug
    link(rel="stylesheet",href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css",integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T",crossorigin="anonymous")

    // custom files
    link(rel="stylesheet",type="text/css",href="index.css")
    link(rel="stylesheet",type="text/css",href="assets/ldui/ldui.min.css")

    link(rel="stylesheet",type="text/css",href="ldpp.css")
    script(src="assets/ldui/ldui.min.js")

    link(rel="stylesheet",type="text/css",href="assets/clusterize/clusterize.css")
    script(src="assets/clusterize/clusterize.min.js")

  body
    include ldpp.pug
    br
    h2 Palette Picker
    .text-center handy palette picker widget for curated palette list
    hr
    #root(style="padding-top: 30px")
      h3 Embedded Picker
      #container: +ldPalettePicker
      br
      hr
      br
      h3 Work with ldCover
      .btn.btn-primary(onclick="ldcv.toggle(true)") Toggle
      .ldcv.default-size: .base: .inner: +ldPalettePicker
      br
      hr
      br
      h3 Standalone Palette Styling
      .ldpal
        .colors
          each c in ["#e5261f","#f7955e","#ffe06b","#aeec51","#58c8ec","#4a5df0","#d062f0"]
            .color(style="background:" + c)
          .ctrl Rainbow
        .name Rainbow
      br
      br
      h5 usage
      textarea(rows="7",cols="60",style="font-family:monospace;font-size:16px;border-radius:3px").
        .ldpal
          .colors
            .color(style="background:...")
            ...
            .ctrl ( things to show on hover )
          .name Pal Name
      h3(style="margin-top:100px") Standalone Palette Editor
      #editor.ldpe(style="max-width:580px;margin:auto"): +paletteEditor

      h3(style="margin-top:100px") Modal Palette Editor
      #ldcv-editor.ldpe.ldcv: .base: .inner.card(style="width:580px;margin:auto"): .card-body
        +paletteEditor
        .foot
          hr
          .btn.btn-outline-dark.mr-2 Undo
          .form-inline.float-right
            .input-group.mr-2(style="width:210px")
              input.form-control(placeholder="Palette Name..")
              .input-group-append
                .btn.btn-outline-dark Save
            .btn.btn-outline-dark.mr-2 Download
            .btn.btn-outline-dark(data-ldcv-set="") Close

      .btn.btn-primary.btn-lg.btn-block.w-50.m-auto(onclick="ldcvEditor.toggle()") Show Editor
    script(type="text/javascript",src="ldpp.palettes.js")
    script(type="text/javascript",src="ldpe.js")
    script(type="text/javascript",src="ldpp.js")
    script(src="index.js")
